{
    "manifest_version" : 3,
    "name" : "Hacker News +",
    "version" : "2.0",
    "description": "Stylish Hacker News.",
    "host_permissions": [
        "https://news.ycombinator.com/*"
    ],
    "content_scripts": [ {
        "all_frames": true,
        "css": [ "style.css" ],
        "matches": [
            "http://news.ycombinator.com/*",
            "https://news.ycombinator.com/*" ]
    }],
    "web_accessible_resources": [{ 
        "resources": ["/fonts/*.ttf"],
        "matches": ["https://news.ycombinator.com/*"]
    }]
}
